<h1><%= @question.title %></h1>
<h2><%= @question.body %></h2>

<% if current_user && current_user.author_of?(@question) %>
    <p><%= link_to 'Delete Question', @question, method: :delete %></p>
    <p><%= link_to 'Edit Question', edit_question_path(@question) %></p>
<% end %>
<hr />

<div class="answers">
  <p class="answers-count">Answers count: <%= @question.answers.count %></p>
  <%= render @question.answers %>
</div>

<% if current_user %>

    <%= form_for [@question, Answer.new], remote: true do |f| %>

      <%= f.label :body, 'Answer' %>
      <%= f.text_area :body %>
      <%= f.submit('Submit Answer') %>

  <% end %>

<% end%>



